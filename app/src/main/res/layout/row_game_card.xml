<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    style="@style/CardDefault">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/img_game"
        android:layout_above="@id/txt_game_name"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#EEEEEE" />

        <CheckBox
            android:id="@+id/img_favorite"
            android:layout_alignParentTop="true"
            android:layout_above="@id/txt_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:button="@null"
            android:background="@drawable/selector_favorite"/>
    </FrameLayout>

    <!-- TextView Game Name -->
    <TextView
        android:id="@+id/txt_game_name"
        android:layout_below="@id/img_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Game Name"
        app:fontFamily="sans-serif"
        android:background="#EEEEEE" />

    <!-- TextView Game Popularity -->
    <TextView
        android:id="@+id/txt_game_popularity"
        android:layout_below="@id/txt_game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Game Popularity"
        app:fontFamily="sans-serif"
        android:background="#EEEEEE"/>

    </LinearLayout>

</android.support.v7.widget.CardView>



